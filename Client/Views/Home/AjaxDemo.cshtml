@{
    ViewData["Title"] = "jQuery AJAX Demo";
}

<div class="space-y-6">
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg font-medium leading-6 text-gray-900">jQuery AJAX Demo</h3>
      <div class="mt-2 max-w-xl text-sm text-gray-500">
        <p>jQuery AJAX is a traditional method for making asynchronous HTTP requests. While older, it's still widely used in legacy applications.</p>
      </div>
      <div class="mt-5 space-y-4">
        <button id="ajaxGetAll" class="breeze-btn inline-flex items-center rounded-md bg-yellow-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-yellow-500">
          ðŸ“‹ Get All Products ($.ajax)
        </button>
        <button id="ajaxGetJSON" class="breeze-btn inline-flex items-center rounded-md bg-orange-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-500">
          <i class="fas fa-list mr-2"></i> Get Products ($.getJSON)
        </button>
        <div class="flex gap-2">
          <input id="ajaxProductId" type="number" placeholder="Product ID" class="form-input flex-1">
          <button id="ajaxGetOne" class="breeze-btn inline-flex items-center rounded-md bg-amber-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-amber-500">
            <i class="fas fa-search mr-2"></i> Get One ($.get)
          </button>
        </div>
        <button id="ajaxGetCategories" class="breeze-btn inline-flex items-center rounded-md bg-yellow-700 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-yellow-600">
          <i class="fas fa-folder mr-2"></i> Get Categories
        </button>
      </div>
    </div>
  </div>

  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Results</h3>
      
      <!-- Status Messages -->
      <div id="ajaxLoading" class="hidden bg-blue-50 rounded-lg p-4 mb-4 flex items-center">
        <div class="spinner mr-3"></div>
        <span class="text-blue-700">Loading...</span>
      </div>

      <div id="ajaxError" class="hidden bg-red-50 rounded-lg p-4 mb-4 text-red-700"></div>
      <div id="ajaxSuccess" class="hidden bg-green-50 rounded-lg p-4 mb-4 text-green-700"></div>

      <pre id="ajaxResults" class="results-box text-black"></pre>
    </div>
  </div>
  
  <!-- Products Cards -->
  <div id="ajaxProductsContainer" class="hidden bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Products (<span id="ajaxProductCount">0</span>)</h3>
      <div id="ajaxProductsGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"></div>
    </div>
  </div>
</div>

@section Scripts {
    <script src="~/js/ajax-demo.js"></script>
}
