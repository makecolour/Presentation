@{
    ViewData["Title"] = "Axios Demo";
}

<div class="space-y-6">
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg font-medium leading-6 text-gray-900">Axios Demo</h3>
      <div class="mt-2 max-w-xl text-sm text-gray-500">
        <p>Axios is a promise-based HTTP client that works in both browser and Node.js. It provides automatic JSON transformation and better error handling.</p>
      </div>
      <div class="mt-5 space-y-4">
        <button id="axiosGetAll" class="breeze-btn inline-flex items-center rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500">
          ðŸ“‹ Get All Products
        </button>
        <button id="axiosGetCategories" class="breeze-btn inline-flex items-center rounded-md bg-teal-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-teal-500">
          <i class="fas fa-folder mr-2"></i> Get Categories
        </button>
        <div class="flex gap-2">
          <input id="axiosProductId" type="number" placeholder="Product ID" class="form-input flex-1">
          <button id="axiosGetOne" class="breeze-btn inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500">
            <i class="fas fa-search mr-2"></i> Get One
          </button>
        </div>
        <div class="border-t pt-4">
          <h4 class="font-medium text-gray-900 mb-2">Filter Products</h4>
          <select id="categoryFilter" class="form-input mb-2">
            <option value="">All Categories</option>
            <option value="Electronics">Electronics</option>
            <option value="Accessories">Accessories</option>
          </select>
          <div class="flex gap-2">
            <input id="minPrice" type="number" placeholder="Min Price" step="0.01" class="form-input flex-1">
            <input id="maxPrice" type="number" placeholder="Max Price" step="0.01" class="form-input flex-1">
          </div>
          <button id="axiosFilter" class="breeze-btn mt-2 inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500">
            <i class="fas fa-search mr-2"></i> Apply Filters
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Results</h3>
      
      <!-- Status Messages -->
      <div id="axiosLoading" class="hidden bg-blue-50 rounded-lg p-4 mb-4 flex items-center">
        <div class="spinner mr-3"></div>
        <span class="text-blue-700">Loading...</span>
      </div>

      <div id="axiosError" class="hidden bg-red-50 rounded-lg p-4 mb-4 text-red-700"></div>
      <div id="axiosSuccess" class="hidden bg-green-50 rounded-lg p-4 mb-4 text-green-700"></div>

      <pre id="axiosResults" class="results-box text-black"></pre>
    </div>
  </div>
  
  <!-- Products Cards -->
  <div id="axiosProductsContainer" class="hidden bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Products (<span id="axiosProductCount">0</span>)</h3>
      <div id="axiosProductsGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"></div>
    </div>
  </div>
</div>

@section Scripts {
<script src="~/js/axios-demo.js" asp-append-version="true"></script>
}
