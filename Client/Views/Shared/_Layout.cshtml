<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | PRN232 Demo</title>
    
    <!-- TailwindCSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    
    <!-- Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios@1.6.0/dist/axios.min.js"></script>
    
    <!-- AngularJS -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    
    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <script>
        // Make API base URL available to client-side scripts
        window.API_BASE_URL = '@ViewBag.ApiBaseUrl';
    </script>
</head>
<body class="h-full">
    <div class="min-h-full">
        <!-- Navigation -->
        <nav class="bg-white border-b border-gray-200 shadow-sm">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                <div class="flex h-16 justify-between">
                    <div class="flex">
                        <div class="flex flex-shrink-0 items-center">
                            <span class="text-xl font-bold text-indigo-600">PRN232 Demo (ASP.NET)</span>
                        </div>
                        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                            <a asp-controller="Home" asp-action="Index" class="@(ViewBag.Page == "home" ? "border-indigo-500 text-gray-900" : "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700") inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium">
                                Home
                            </a>
                            <a asp-controller="Home" asp-action="FetchDemo" class="@(ViewBag.Page == "fetch" ? "border-indigo-500 text-gray-900" : "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700") inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium">
                                Fetch API
                            </a>
                            <a asp-controller="Home" asp-action="AxiosDemo" class="@(ViewBag.Page == "axios" ? "border-indigo-500 text-gray-900" : "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700") inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium">
                                Axios
                            </a>
                            <a asp-controller="Home" asp-action="AjaxDemo" class="@(ViewBag.Page == "ajax" ? "border-indigo-500 text-gray-900" : "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700") inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium">
                                AJAX
                            </a>
                            <a asp-controller="Home" asp-action="AngularDemo" class="@(ViewBag.Page == "angular" ? "border-indigo-500 text-gray-900" : "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700") inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium">
                                AngularJS
                            </a>
                            <a asp-controller="Home" asp-action="AuthDemo" class="@(ViewBag.Page == "auth" ? "border-indigo-500 text-gray-900" : "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700") inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium">
                                Auth
                            </a>
                            <a asp-controller="Home" asp-action="BackendCallDemo" class="@(ViewBag.Page == "backend" ? "border-indigo-500 text-gray-900" : "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700") inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium">
                                Backend Call
                            </a>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <span class="text-xs text-gray-500">API: @ViewBag.ApiBaseUrl</span>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        <main class="py-10">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                @RenderBody()
            </div>
        </main>

        <!-- Footer -->
        <footer class="bg-white border-t border-gray-200 mt-auto">
            <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center text-sm text-gray-500">
                    <div>
                        &copy; 2025 PRN232 Demo - ASP.NET MVC Client
                    </div>
                    <div class="flex gap-4">
                        <span><i class="fas fa-code"></i> Built with ASP.NET Core 8</span>
                        <span><i class="fas fa-server"></i> Server: @ViewBag.ApiBaseUrl</span>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
